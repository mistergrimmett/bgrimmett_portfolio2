@model bgrimmett_portfolio2.Models.Email


<div class="col-md-12 text-center" style="background-color:black;">
    <h2 style="padding-top:100px; color:#444444;">Contact</h2>
    <p>Questions? Comments? Hiring inquiries? Complete the fields below to get in touch with me!</p>


    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label" })
                <div>
                    <textarea class="form-control" name="body" rows="5"></textarea>
                    @*@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })*@
                </div>
            </div><div class="form-group">
                <div>
                    <input type="submit" class="btn btn-danger" value="Send" />
                </div>
            </div>
        }
    </div>

    <div class="col-md-8">
        <img src="~/template/images/bailbond.jpg" class="img-responsive" style="border-radius:6px;" />
    </div>
</div>